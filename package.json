{
    "name": "jtml",
    "version": "1.0.0",
    "description": "**jtml** is a lightweight JavaScript micro-library inspired by [HTMX](https://htmx.org), but built for the JSON age. It brings HTML templating back to the front of frontend developmentâ€”where it belongs.",
    "main": "template.js",
    "directories": {
        "doc": "docs"
    },
    "scripts": {
        "test": "echo \"Error: no test specified\" && exit 1",
        "build": "npx esbuild src/main.js --bundle --minify --sourcemap --outfile=${BUILD_OUT:-.}/build.js --target=es6 --format=iife",
        "watch": "npx esbuild src/main.js --bundle --sourcemap --outfile=${BUILD_OUT:-.}/build.js --target=es6 --format=iife --watch",
        "terser": "terser ${TERSER_IN:-.}/build.js -o ${TERSER_OUT:-.}/jtml-min.js -c -m",
        "dev": "concurrently 'BUILD_OUT=dev npm run watch' 'npx serve ./dev'",
        "update-doc": "BUILD_OUT=docs npm run build && TERSER_IN=docs TERSER_OUT=docs npm run terser"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "devDependencies": {
        "esbuild": "^0.25.5"
    },
    "dependencies": {
        "concurrently": "^9.2.1",
        "serve": "^14.2.5",
        "terser": "^5.44.1"
    }
}